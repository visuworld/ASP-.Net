@model Project_name.Models.std
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

   <style>
        body {
            background-color: #f4f7fc;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .registration-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
        }

            .registration-container h3 {
                text-align: center;
                margin-bottom: 20px;
            }

        .form-control {
            margin-bottom: 15px;
        }

        table {
            margin-top: 30px;
            width: 80%;
            margin-left: auto;
            margin-right: auto;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>


    <!-- Student Registration Form -->
    <div class="registration-container">
        <h3>Update From</h3>
        <form id="registrationForm" action="@Url.Action("Update","Home")" method="post">

            <!-- Student Name -->
            <div class="mb-3">
                <input type="hidden"  value="@Model.id" name="id"/>
                <label for="studentName" class="form-label">Student Name</label>
                <input type="text" class="form-control" id="studentName" name="name" value="@Model.name" required>
            </div>

            <!-- Roll Number -->
            <div class="mb-3">
                <label for="rollNumber" class="form-label">Roll Number</label>
                <input type="text" class="form-control" id="rollNumber" name="roll" value="@Model.roll" required>
            </div>

            <!-- Course -->
            <div class="mb-3">
                <label for="course" class="form-label">Course</label>
                <select class="form-select" id="course" name="course" required value="@Model.course">
                    <option value="">Select Course</option>
                    <option value="BSc">B.Sc.</option>
                    <option value="BCom">B.Com.</option>
                    <option value="BA">B.A.</option>
                    <option value="BTech">B.Tech</option>
                </select>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required value="@Model.email">
            </div>
            <div class="mb-3">
                <label for="mobile" class="form-label">Mobile</label>
                <input type="number" class="form-control" id="mobile" name="mobile" required value="@Model.mobile">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required value="@Model.password">
            </div>
            <div class="mb-3">
                <label for="re_password" class="form-label">Re-Password</label>
                <input type="password" class="form-control" id="re_password" name="re_password" required>
            </div>
            <!-- Submit Button -->
            <button type="submit" class="btn btn-success w-100">Update</button>
        </form>
    </div>

   
