<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!--linking-->
    <link href="~/content/StyleSheet1.css" rel="stylesheet" />
    

   

</head>
<body>


    <!--navmenu-->

    <header class="header">
        <div class="logo">
            <a href="#">MyLogo</a>
        </div>
        <nav class="navigation">
            <ul>

                <li><a href="/Home/Reg">Registration</a></li>
                <li><a href="/Home/Login">Login</a></li>
                <li><a href="/Home/facebooklogin">Facebook</a></li>
                <li><a href="/Home/facebookregister">facebook register</a></li>
                <li><a href="/Home/table">Table</a></li>

                <li><a href="#">About</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </header>



    <div class="container-fluid">
        @RenderBody()
    </div>
    <hr />


    <footer style="background-color: #222; color: #fff; padding: 40px 20px; text-align: center;">
        <div style="max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; flex-wrap: wrap;">
            <!-- Logo Section -->
            <div style="flex: 1; min-width: 200px;">
                <img src="your-logo.png" alt="Logo" style="width: 150px; margin-bottom: 20px;">
                <p>Bringing Innovation to Your World</p>
            </div>

            <!-- Links Section -->
            <div style="flex: 2; min-width: 250px; padding: 10px;">
                <h4>Quick Links</h4>
                <ul style="list-style: none; padding: 0;">
                    <li><a href="#home" style="color: #fff; text-decoration: none; margin-bottom: 10px; display: block;">Home</a></li>
                    <li><a href="#about" style="color: #fff; text-decoration: none; margin-bottom: 10px; display: block;">About Us</a></li>
                    <li><a href="#services" style="color: #fff; text-decoration: none; margin-bottom: 10px; display: block;">Services</a></li>
                    <li><a href="#contact" style="color: #fff; text-decoration: none; margin-bottom: 10px; display: block;">Contact</a></li>
                </ul>
            </div>

            <!-- Contact Section -->
            <div style="flex: 1; min-width: 250px; padding: 10px;">
                <h4>Contact Info</h4>
                <p>Email: <a href="mailto:info@yourdomain.com" style="color: #fff; text-decoration: none;">info@yourdomain.com</a></p>
                <p>Phone: (123) 456-7890</p>
                <p>123 Business St, City, Country</p>
            </div>
        </div>

        <div style="border-top: 1px solid #444; padding-top: 20px; margin-top: 20px;">
            <p style="font-size: 14px; color: #bbb;">&copy; 2025 Your Company Name. All rights reserved.</p>
        </div>
    </footer>



  

    @RenderSection("scripts", required: false)
</body>
</html>
